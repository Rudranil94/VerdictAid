# Application Settings
SECRET_KEY=your-secret-key
DATABASE_URL=postgresql://user:password@localhost:5432/verdict_aid

# API Keys
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=Verdict Aid
EMAIL_FROM_ADDRESS=notifications@verdictaid.com

# Push Notification Configuration
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CLAIMS_EMAIL=admin@verdictaid.com
FCM_API_KEY=your-fcm-api-key
FCM_PROJECT_ID=your-fcm-project-id

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password

# Cache Configuration
CACHE_PREFIX=verdict_aid_cache
CACHE_DEFAULT_TIMEOUT=300  # 5 minutes

# Notification Settings
MAX_STORED_NOTIFICATIONS=100
NOTIFICATION_RETENTION_DAYS=7
